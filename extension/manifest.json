{
    "manifest_version": 3,
    "name": "Privacy Policy Summarizer",
    "version": "1.0",
    "description": "Summarizes privacy policies on the page when activated.",
    "permissions": [
      "scripting",
      "storage"
    ],
    "host_permissions": [
      "<all_urls>",
      "http://127.0.0.1:8000/*"
    ],
    "action": {
      "default_title": "Summarize Privacy Policy",
      "default_icon": {
        "32": "icons/icon32.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    }
  }
  